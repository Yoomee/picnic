#badge_announcement_wrapper.badge_info_wrapper
  #badge_announcements
    .badge_announcement
      =image_for(@badge, "120x120", :class => "badge_image")
      .badge_info
        %h3=@badge.name
        .badge_description
          =simple_format(@badge.description)
        -if @badge.members.count > 1
          .badge_members
            =link_to("#{pluralize(@badge.members.count, 'other member')} have this badge", @badge, :class => "other_member_count")