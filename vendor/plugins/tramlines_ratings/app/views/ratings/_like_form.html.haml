-unique_rating = unique_rating_string(rating)
.like_form{:id => "like_form_#{unique_rating}"}
  .like_links
    =rating_link(rating, polarized, allow_unlike)
  .like_loader{:style => "display:none"}=image_tag(ajax_loader)
  =render("ratings/form", :rating => rating, :polarized => polarized, :allow_unlike => allow_unlike)