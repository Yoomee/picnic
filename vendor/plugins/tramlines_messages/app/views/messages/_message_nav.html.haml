-active ||= nil
#message_nav_bar
  %ul#message_nav
    %li{:class => ("active" if active == "inbox")}
      =link_to "Inbox #{@logged_in_member.has_unread_messages? ? " <span>#{@logged_in_member.unread_message_count}</span>" : ""}", messages_path
    %li{:class => ("active" if active == "sentbox")}
      =link_to "Sent messages", sent_messages_path
    %li#new_msg{:class => ("active" if active == "new_msg")}
      =link_to "+ New message", new_message_path  
    
  %br.clear