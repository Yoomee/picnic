.programme_list_item{:style => "border-left-color:#{session.color};display:#{hidden ? 'none' : 'block'}", :class => "day#{session.conference_day} venue#{session.venue.id}", :id => "conference_session_#{session.id}"}
  .details
    =link_to_self(session, :class => "session_name")
    %br
    ="#{"Day #{session.conference_day}, " if show_day}#{session.time_string}, #{session.venue}"
  .tags
    -session.tags.first(3).reverse.each do |tag|
      %span.tag{:style => "background:#{tag.color || '#ccc'}"}=tag
  