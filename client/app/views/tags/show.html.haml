.row
  =render :partial => 'themes/trending'
  .tencol.last
    .row
      .fourcol
        %h2.tag
          =@tag
        .tag_description
          =read_more_truncate(@tag.description, :length => 500)
      .eightcol.last
        =image_for(@tag, '616x500')
    .row
      %h5
        Stories
      -@stories.each_with_col_name do |story, column_name|
        %div{:class => column_name}
          =render "browse/story", :story => story
-options_panel do
  =back_link
  =link_if_allowed("Edit", edit_tag_proc(@tag))
  =link_if_allowed("Delete", @tag, :method => :delete, :confirm => "Are you sure?")