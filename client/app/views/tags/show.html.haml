-no_content_row
.row
  =render :partial => 'themes/trending'
  .fourcol
    %h1.tag=@tag
    -if @tag.official?
      .tag_description
        =read_more_truncate(@tag.description, :length => 500)
  .five.last
    =image_for(@tag, '335x255#') if @tag.official?
  .eightcol
    %h3.profile_title Related posts
    -if @tag.shouts.empty?
      %p There are no posts with this tag.
    -else
      =render_shouts(@tag.shouts, :show_member => true, :parent => @tag, :filter => 'latest')
.row
  -options_panel do
    =back_link
    =link_if_allowed("Edit", edit_tag_proc(@tag))
    =link_if_allowed("Delete", @tag, :method => :delete, :confirm => "Are you sure?")