!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
      = site_name
      \:
      = site_slogan
      \//
      = page_title
      = page_subtitle
    %meta{ :name => "Generator", :content => "Yoomee (Ruby on Rails)" }
    %meta{ :name => "robots", :content => "index, follow" }
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "info", :content => "#{page_title}#{page_subtitle}" }
    %link{ :href => "/images/favicon.ico", :rel => "shortcut icon" }
    = google_javascripts :jquery, :jqueryui
    = javascript_include_tag 'jrails'
    = javascript_include_tag 'jquery.cycle'
    = javascript_include_tag 'tramlines'
    = javascript_include_tag 'jquery.labelify'

    = stylesheet_link_tag 'http://fast.fonts.com/cssapi/4d18a55f-896a-46c9-a509-6b06d325e32c.css'
    = stylesheet_link_tag 'client/styles'
    = stylesheet_link_tag 'jquery-ui'
    =# formtastic_stylesheet_link_tag
    =yield :head
    -unless current_page?(new_session_path)
      :javascript
        $(document).ready(function(){    
          $("#member_login_bttn").click(function () {
            $("#login_slide_bar").slideToggle("slow");
            $("#member_login_bttn").toggleClass("open");
          });
        });
  - body_tag do
    #wrapper
      #header
        =render :partial => 'layouts/header'
      #subheader
        #search_box
          %form{ :action => "/search/results", :method => "post" }
            %input#search_field{ :name => "term", :type => "text", :value => "Search", :onfocus => "var element = document.getElementById('search_field');element.value='';" }
            %input#search_icon{ :name => "commit", :title => "search", :value => "search" }      
        =render("layouts/nav")
        =render("layouts/subnav")
      #main.content
        =render_flash
        -unless true && hide_page_title?
          %h1#page_title=page_title
        = @content_for_layout
        %br.clear
      #footer
        =render :partial => 'layouts/footer'