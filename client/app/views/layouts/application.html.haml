!!! Strict
%html{ "xml:lang" => "en", :lang => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %title
      = site_name
      \:
      = site_slogan
      \//
      = page_title
      = page_subtitle
    %meta{ :name => "Generator", :content => "Yoomee (Ruby on Rails)" }
    %meta{ :name => "robots", :content => "index, follow" }
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "Content-Type" }
    %meta{ :name => "info", :content => "#{page_title}#{page_subtitle}" }
    %link{ :href => "/images/favicon.ico", :rel => "shortcut icon" }
    = google_javascripts :jquery, :jqueryui
    = javascript_include_tag 'jrails', 'jquery.cycle', 'tramlines', 'client/tramlines', 'jquery.labelify', 'jquery.fancy_box/jquery.fancybox-1.3.1.pack', 'jquery.fancy_box/jquery.mousewheel-3.0.2.pack.js', 'client/load_fancybox', :cache => true
    =javascript_include_tag 'jquery.fancy_box/jquery.easing-1.3.pack.js'
    = javascript_include_tag "http://connect.facebook.net/en_US/all.js"
    = stylesheet_link_tag 'http://fast.fonts.com/cssapi/f1269106-f262-440b-b3ce-93423b2eaf06.css'
    = stylesheet_link_tag 'jquery.fancybox', 'jquery-ui', 'client/1140.css', 'client/styles', :cache => true
    =# formtastic_stylesheet_link_tag
    =yield :head
    :javascript
      $(document).ready(function() {
        FB.init({
          appId  : '#{Facebooker2.app_id}',
          status : true, // check login status
          cookie : true, // enable cookies to allow the server to access the session
          xfbml  : true  // parse XFBML
        });
      });
  - body_tag do
    #wrapper
      #header.container
        =render :partial => 'layouts/header'
      #subheader.container
        .row
          .sevencol
            =render("layouts/nav")
          #search_box_outer.fivecol.last    
            #search_box
              %form{ :action => "/search/results", :method => "post" }
                %input#search_field{ :name => "term", :type => "text", :value => "Search", :onfocus => "var element = document.getElementById('search_field');element.value='';" }
                %input#search_icon{ :name => "commit", :title => "search", :value => "search" }      
          .twelvecol      
            =render("layouts/subnav")
      #main.content
        .container
          .row
            .twelvecol
              =render_flash
            .twelvecol  
              -unless true && hide_page_title?
                %h1#page_title=page_title
        .container      
          = @content_for_layout
      #footer.container
        =render :partial => 'layouts/footer'
    %div{:id => "fb-root"}        
