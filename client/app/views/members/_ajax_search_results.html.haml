-if search.term.blank?
  -Member.active.with_image.random.limit(4).each do |member|
    =render "members/find_someone_result", :member => member
-elsif search.results.empty?
  %li.no_results
    No members found matching
    ="'#{search.term}'."
    Try again above.
-else
  -search.results.each do |member|
    =render "members/find_someone_result", :member => member