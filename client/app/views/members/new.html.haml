-title "Join the club", :hidden => true

#register_picnic_club.register_box
  %h2 Join the club
  .clear
  %p
    Pull in your details by clicking on a service below.
  =render("sessions/auth_links")
  %p.small_print
    (We won't post anything without your permission)

  %p.show_the_hard_way
    =link_to_function "Or enter your details manually...", "$('#the_hard_way').toggle('blind');$('#member_email').focus()"
  .clear
  #the_hard_way{:style => "display:none"}
    %div
      %hr  
      -semantic_form_for @member do |form|
        -form.inputs do
          -form.with_options(:input_html => {:size => 30}) do |opt|
            =opt.input :email
            =opt.input :password
            =opt.input :forename, :label => 'First name'
            =opt.input :surname, :label => 'Last name'
          =form.input :country, :label => 'Where are you from?', :prompt => 'Select a country', :as => :country
          =form.commit_button "Go &gt; &gt;"
-options_panel do
  =back_link