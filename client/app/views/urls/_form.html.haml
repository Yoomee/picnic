-semantic_remote_form_for url_object, :complete => "$.fancybox.resize()" do |form|
  -form.inputs do
    =form.input :url, :as => :string, :input_html => {:class => "labelify", :title => "e.g. mywebsite.com"}, :label => false
    =form.input :attachable_id, :as => :hidden
    =form.input :attachable_type, :as => :hidden
  -form.buttons do
    =form.commit_button "Submit"
