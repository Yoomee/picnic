-no_content_row
.row
  -content_for(:head) do
    :javascript
      $(document).ready(function() {
        $('a#share_as_email').fancybox();
      });
  -title @page.title
  -hide_page_title
  #page_subnav.twocol
    -if !@page.section.root? || @page.section.page_and_section_descendant_generations == 1
      %ul.lst
        -if @page.section.view == 'news_view'
          -@page.section.all_children(:published_only => !admin_logged_in?).reverse.each do |page_or_section|
            =li_with_active(viewing_page_or_section?(page_or_section), link_to_self(page_or_section))
        -else
          -@page.section.all_children(:published_only => !admin_logged_in?).each do |page_or_section|
            =li_with_active(viewing_page_or_section?(page_or_section), link_to_self(page_or_section))
  #page_content{:class => "#{@page.slug_in?(%w{the_team advisors picnic11_speakers}) ? 'eightcol last' : 'fivecol'}"}
    #page_left_col
      %h1#page_title=@page.title
      -unless @page.published?
        %p#page_status=@page.status_string
      =render('content', :page => @page)
    =render_slug(@page.slug)

  -if !@page.slug_in?(%w{the_team advisors correspondents picnic11_speakers})
    #page_right_col
      -if @page.has_photo? || @page.slug_in?(%w{location contact})
        #article_image.fivecol.last
          -if @page.slug_in?(%w{location contact})
            -location = @page.slug_is?(:contact) ? Location.picnic_hq : Location.picnic_festival
            =google_map(location, :width => 420, :height => 300, :centre => location.lat_lng || [30,0], :zoom => 11, :map_options => "disableDefaultUI:true,zoomControl:true")
          -else
            =photo_for(@page, '450x')
          =snippet(@page, :photo_caption)
          =snippet(@page, :pull_quote)  
          =snippet(@page, :call_to_action)
      #keep_in_touch.fivecol.last
        %h3 Keep in Touch
        %p Add us to your favorite social networks:
        %ul
          %li
            =link_to "Twitter", "http://twitter.com/picnicfestival", :class=>"twitter", :target=>"blank"
          %li
            =link_to "Facebook", "http://www.facebook.com/pages/Amsterdam-Netherlands/PICNIC/52555521797", :class=>"facebook", :target=>"blank"
          %li
            =link_to "Vimeo", "http://vimeo.com/picnicfestival", :class=>"vimeo", :target=>"blank"
          %li
            =link_to "Flickr", "http://www.flickr.com/photos/crossmediaweek", :class=>"flickr", :target=>"blank"
          %li
            =link_to "LinkedIn", "http://www.linkedin.com/groups?gid=150580", :class=>"linkedin" , :target=>"blank"           
          //%li
          //=link_to "RSS", "#", :class=>"rss"
            

      #newsletter_signup.fivecol.last  
        %h3 Sign up for the PICNIC newsletter
        %p Get the latest news, announcements, special offers and more from PICNIC and our partners. Sign up today for PICNICâ€™s monthly newsletter.
        
        -form_tag("http://picnicnetwork.us1.list-manage.com/subscribe/post?u=f68513e4236c461ff84a35e7a&id=bdfa09384f") do
          =label_tag("FNAME", "First name")
          =text_field_tag("FNAME", "", :class=>'labelify', :title=>'First name')
          =label_tag("FNAME", "Last name")
          =text_field_tag("LNAME", "", :class=>'labelify', :title=>'Last name')
          =label_tag("FNAME", "Email")        
          =text_field_tag("EMAIL", "", :class=>'labelify', :title=>'Email')
          =submit_tag("Send", :class=>'newsletter_submit')
      -if false
        .page_share
          %h2 Share
          %ul
            %li
              =link_to "Facebook", "http://facebook.com/sharer.php?u=#{site_url}#{page_path(@page, :host => site_host)}", :popup => ['popUpWindow','height=350,width=600'] 
            %li
              =#link_to_function "Twitter", "http://twitter.com/home?status=#{@page.title} - #{site_url}#{page_path(@page, :host => site_host)}", :target => "_blank"
              =link_to_function "Twitter", "(function(){window.twttr=window.twttr||{};var D=550,A=450,C=screen.height,B=screen.width,H=Math.round((B/2)-(D/2)),G=0,F=document,E;if(C>A){G=Math.round((C/2)-(A/2))}window.twttr.shareWin=window.open('http://twitter.com/share','',',left='+H+',top='+G+',width='+D+',height='+A+',personalbar=0,toolbar=0,scrollbars=1,resizable=1');E=F.createElement('script');E.src='http://platform.twitter.com/bookmarklets/share.js?v=1';F.getElementsByTagName('head')[0].appendChild(E)}())"
            %li
              =link_to 'Email', {:controller => 'share', :action => 'new', :model_name => 'page', :id => @page.id, :as_email => true}, :id => 'share_as_email'
    -if @page.has_related_items?
      #related_content.row
        .twelvecol
          %h2.title Related content
        =render_related_items(@page, :limit => 6, :truncate_length => 150)

.row        
  -options_panel do
    =back_link
    ="Tagged #{in_tags(@page)}" unless @page.tags.empty?
    =link_if_allowed 'Edit section', edit_section_proc(@page.section)
    =link_if_allowed 'Add page', new_section_page_proc(@page.section)
    =link_if_allowed 'Edit page', edit_page_proc(@page)
    =link_if_allowed 'Delete page', page_proc(@page), :method => :delete, :confirm => 'Are you sure you want to delete this page?'
    =#render_share_link
    =yield(:options_panel)
