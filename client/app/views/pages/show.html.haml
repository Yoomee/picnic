-no_content_row
.row
  -content_for(:head) do
    :javascript
      $(document).ready(function() {
        $('a#share_as_email').fancybox();
      });
  -title @page.title
  -hide_page_title
  #header_left_col.threecol
    #top_color_left.top_color
    .page_header
      %p.stories_header
        STORIES 
        %strong SOCIETY
      
    
  #header_right_col.ninecol.last  
    #top_color_right.top_color
    .page_header
      %h1#page_title=@page.title
  #page_left_col.threecol
    #page_subnav
      =render("pages/subnav", :page => @page)  
    #page_tags
      %ul.lst
        %li
          =link_to "Sustainability", "#", :class=>"tag"
        %li
          =link_to "Design", "#", :class=>"tag"
        %li
          =link_to "Urban futures", "#", :class=>"tag"
    #share_this
      %h3 Share this
      =link_to "Facebook", "http://facebook.com/sharer.php?u=#{site_url}#{page_path(@page, :host => site_host)}", :popup => ['popUpWindow','height=350,width=600'] 
      =#link_to_function "Twitter", "http://twitter.com/home?status=#{page.title} - #{site_url}#{page_path(page, :host => site_host)}", :target => "_blank"
      =link_to_function "Twitter", "(function(){window.twttr=window.twttr||{};var D=550,A=450,C=screen.height,B=screen.width,H=Math.round((B/2)-(D/2)),G=0,F=document,E;if(C>A){G=Math.round((C/2)-(A/2))}window.twttr.shareWin=window.open('http://twitter.com/share','',',left='+H+',top='+G+',width='+D+',height='+A+',personalbar=0,toolbar=0,scrollbars=1,resizable=1');E=F.createElement('script');E.src='http://platform.twitter.com/bookmarklets/share.js?v=1';F.getElementsByTagName('head')[0].appendChild(E)}())"

  #page_right_col.sixcol  
    %h2 PICNIC is so much more than your average conference, it's a festival! What sets PICNIC apart from the rest? Keep reading to find out more.  
  #article_image.sevencol.last
    -if @page.slug_in?(%w{location contact})
      -location = @page.slug_is?(:contact) ? Location.picnic_hq : Location.picnic_festival
      =google_map(location, :width => 420, :height => 300, :centre => location.lat_lng || [30,0], :zoom => 11, :disable_default_ui => false, :map_options => "mapTypeControl:false,zoomControl:true,streetViewControl:false")
    -else
      =photo_for(@page, '550x')
    =snippet(@page, :photo_caption)
    =snippet(@page, :pull_quote)  
    =snippet(@page, :call_to_action)    
  -if false  
    #page_subnav.twocol
      =render("pages/subnav", :page => @page)
  .sixcol    
    =render('pages/content', :page => @page)    
  %span
  -if false
    #page_content{:class => "#{@page.slug_in?(%w{the_team advisors picnic11_speakers contributors}) ? 'eightcol last' : 'fivecol'}"}
      #page_left_col
        -if @page.has_photo? || @page.slug_in?(%w{location contact})
        -unless @page.published?
          %p#page_status=@page.status_string
        =render('pages/content', :page => @page)
        -if @page.slug_is(:beta) && @enquiry
          =render_form @enquiry
      =render_slug(@page.slug)

    -if !@page.slug_in?(%w{the_team advisors correspondents picnic11_speakers})
      #page_right_col
        =render "pages/right_col", :page => @page
      -if @page.has_related_items?
        #related_content.row
          .twelvecol
            %h2.title Related content
          =render_related_items(@page, :limit => 6, :truncate_length => 150)

.row        
  -options_panel do
    =back_link
    =link_if_allowed 'Edit section', edit_section_proc(@page.section)
    =link_if_allowed 'Add page', new_section_page_proc(@page.section)
    =link_if_allowed 'Edit page', edit_page_proc(@page)
    =link_if_allowed 'Delete page', page_proc(@page), :method => :delete, :confirm => 'Are you sure you want to delete this page?'
    =#render_share_link
    =yield(:options_panel)
