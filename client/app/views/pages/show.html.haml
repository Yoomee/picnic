-hide_page_title
#page_subnav
  -if !@page.section.root?
    %ul.lst
      -@page.section.all_children.each do |page_or_section|
        =li_with_active(viewing_page_or_section?(page_or_section), link_to_self(page_or_section))

#page_content
  #page_left_col
    %h1=@page.title
    -unless @page.published?
      %p#page_status=@page.status_string
    =render :partial => 'content', :locals => {:page => @page}
  #page_right_col
    -if @page.has_photo?
      #article_image
        =photo_for(@page, '140x')
    =snippet(@page, :call_to_action)
  -if @page.has_related_items?
    #related_content
      %h2.title Related content
      =render_related_items(@page)
-options_panel do
  =back_link
  ="Tagged #{in_tags(@page)}" unless @page.tags.empty?
  =link_if_allowed 'Edit section', edit_section_proc(@page.section)
  =link_if_allowed 'Add page', new_section_page_proc(@page.section)
  =link_if_allowed 'Edit page', edit_page_proc(@page)
  =link_if_allowed 'Delete page', page_proc(@page), :method => :delete, :confirm => 'Are you sure you want to delete this page?'
  =render_share_link
  =yield(:options_panel)
