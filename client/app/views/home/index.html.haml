-content_for :head do
  :javascript
    $(document).ready(function(){
      $('.cycle').cycle({
        fx: 'scrollHorz',
        speed: 'slow',
        timeout: 8000,
        easing: 'easeOutQuint',
        pager: '.cycle_nav',
        next: '.cycle_next',
        prev: '.cycle_prev'
      });
    });
.big_message
  .big_message_left
    %h1
      Key messages here about: innovation, partnerships, technology,
      youth leadership
  #big_message_right.cycle_frame
    .cycle
      -3.times do
        %div=image_tag('holding.png', :height => 260, :width =>  460)
    .cycle_nav
      =link_to 'Next', '#', :class => 'cycle_next'
#what_we_do_box.homepage_box
  %h3 What we do
  %ul.bx_lst
    -@what_we_do_section.pages.first(3).each do |page|
      %li
        =link_to(image_for(page), page, :class => "list_image")
        .list_right
          =link_to_self(page)
          =description_for(page, :length => 150)
#latest_blog_posts.homepage_box
  %h3 Latest
  %ul.bx_lst
    -@latest_blog_posts.first(3).each do |blog_post|
      %li
        =link_to_self(blog_post)
        =description_for(blog_post, :length => 150)