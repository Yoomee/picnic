.photo
  =link_if_allowed(image_for(photo, '180x180#'), photo)
  -if !photo.untitled?
    .photo_name
      =photo.name
  -if !photo.description.blank?
    .photo_description{:style => "height:0px"}
      -description = truncate_html(auto_link(photo.description), 75)
      -description << link_to("Read more", photo) if photo.description.length > 72
      =simple_format(description)