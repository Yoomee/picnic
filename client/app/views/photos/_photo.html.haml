.photo
  =link_if_allowed(image_for(photo, '180x140#'), photo)
  -if !photo.untitled?
    .photo_name
      =photo.name
  -if !photo.description.blank?
    .photo_description{:style => "height:0px"}
      =truncate(photo.description, :length => 75)
      =link_to("Read more", photo) if photo.description.length > 97