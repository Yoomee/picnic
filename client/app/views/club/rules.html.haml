-no_content_row
-title @rules_page.title, :hidden => true

.row
  #page_content.sevencol
    #page_left_col
      %h1#page_title=@rules_page.title
      =render('pages/content', :page => @rules_page)
      
  #page_right_col.fivecol.last
    =render "pages/right_col", :page => @rules_page
  -if @rules_page.has_related_items?
    #related_content.row
      .twelvecol
        %h2.title Related content
      =render_related_items(@rules_page, :limit => 6, :truncate_length => 150)
      
.row        
  -options_panel do
    =back_link
    =link_if_allowed 'Edit section', edit_section_proc(@rules_page.section)
    =link_if_allowed 'Add page', new_section_page_proc(@rules_page.section)
    =link_if_allowed 'Edit page', edit_page_proc(@rules_page)
    =link_if_allowed 'Delete page', page_proc(@rules_page), :method => :delete, :confirm => 'Are you sure you want to delete this page?'